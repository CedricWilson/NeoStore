<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddAddress">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30B1F2"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />


        <TextView
            android:id="@+id/tbProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:text="Add Address"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="10dp"

            >

            <TextView
                android:id="@+id/tvaddres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS"
                android:textSize="15dp"
                android:layout_margin="10dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                />


            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="20dp"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:padding="10dp"

                android:background="@drawable/roundedbox"
                android:backgroundTint="@color/lightgray"

                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"

                app:layout_constraintTop_toBottomOf="@+id/tvaddres"
                />

            <TextView
                android:id="@+id/tcity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CITY"
                android:textSize="15dp"
                android:layout_margin="10dp"

                app:layout_constraintTop_toBottomOf="@+id/etAddress"
                app:layout_constraintStart_toStartOf="parent"

                />

            <EditText
                android:id="@+id/etCity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Landmark"

                android:padding="10dp"
                android:background="@drawable/roundedbox"
                android:backgroundTint="@color/lightgray"

                app:layout_constraintTop_toBottomOf="@id/tcity1"
                />

            <TextView
                android:id="@+id/tstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATE"
                android:textSize="15dp"
                android:layout_margin="10dp"

                app:layout_constraintTop_toBottomOf="@+id/etCity1"
                app:layout_constraintStart_toStartOf="@id/guideline"

                />

            <EditText
                android:id="@+id/etState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="State"

                android:padding="10dp"
                android:background="@drawable/roundedbox"
                android:backgroundTint="@color/lightgray"

                app:layout_constraintTop_toBottomOf="@+id/tstate"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tcountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COUNTRY"
                android:textSize="15dp"
                android:layout_margin="10dp"

                app:layout_constraintTop_toBottomOf="@+id/etState"
                app:layout_constraintStart_toStartOf="@id/guideline"

                />

            <EditText
                android:id="@+id/etCountry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Country"

                android:padding="10dp"
                android:background="@drawable/roundedbox"
                android:backgroundTint="@color/lightgray"

                app:layout_constraintTop_toBottomOf="@+id/tcountry"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <TextView
                android:id="@+id/tcity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CITY"
                android:textSize="15dp"
                android:layout_margin="10dp"

                app:layout_constraintTop_toBottomOf="@+id/etCity1"
                app:layout_constraintStart_toStartOf="parent"

                />

            <EditText
                android:id="@+id/etcity2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="City"

                android:padding="10dp"
                android:background="@drawable/roundedbox"
                android:backgroundTint="@color/lightgray"

                app:layout_constraintTop_toBottomOf="@+id/tcity2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                />

            <TextView
                android:id="@+id/tzip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZIPCODE"
                android:textSize="15dp"
                android:layout_margin="10dp"

                app:layout_constraintTop_toBottomOf="@+id/etcity2"
                app:layout_constraintStart_toStartOf="parent"

                />

            <EditText
                android:id="@+id/etzipcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="number"
                android:hint="Zipcode"

                android:padding="10dp"
                android:background="@drawable/roundedbox"
                android:backgroundTint="@color/lightgray"

                app:layout_constraintTop_toBottomOf="@+id/tzip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                />

            <Button
                android:id="@+id/btASubmit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="30dp"
                android:background="@drawable/inputloginbox"
                android:backgroundTint="@color/colorPrimary"
                android:text="ADD"
                android:textColor="@color/white"

                app:layout_constraintTop_toBottomOf="@+id/etzipcode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="vertical" />


        </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>